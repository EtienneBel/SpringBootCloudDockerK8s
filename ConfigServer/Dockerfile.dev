FROM maven:3.9-eclipse-temurin-17

WORKDIR /app

COPY pom.xml .
RUN mvn dependency:go-offline -B

COPY src ./src

# Run with Spring Boot DevTools enabled for hot reload
# fork=false enables better hot reload with DevTools
ENTRYPOINT ["mvn", "spring-boot:run", "-Dspring-boot.run.fork=false"]

EXPOSE 9296
